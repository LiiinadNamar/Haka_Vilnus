{% extends 'base.html.twig' %}

{% block title %}Create New Priority{% endblock %}

{% block body %}
    <div class="container-fluid p-4">
        <div class="row justify-content-center">
            <div class="col-12 col-xl-8">
                <div class="d-flex align-items-center gap-3 mb-4">
                    <a href="{{ path('app_priority_index') }}" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-arrow-left"></i>
                    </a>
                    <div>
                        <h1 class="slide-in-left">Create New Priority</h1>
                        <p class="text-muted mb-0 slide-in-left">Add a new priority for AI classification</p>
                    </div>
                </div>

                <!-- Flash Messages -->
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                {% endfor %}

                <div class="card">
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.number) }}
                                        {{ form_widget(form.number) }}
                                        {{ form_errors(form.number) }}
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        {{ form_label(form.color) }}
                                        {{ form_widget(form.color) }}
                                        {{ form_errors(form.color) }}
                                    </div>
                                </div>
                            </div>
                            
                            <div class="mb-3">
                                {{ form_label(form.prompt) }}
                                {{ form_widget(form.prompt) }}
                                {{ form_errors(form.prompt) }}
                                <div class="form-text">
                                    Describe the condition when this priority should be assigned by AI. Be specific about the types of issues or keywords that should trigger this priority level.
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle"></i> Create Priority
                                </button>
                                <a href="{{ path('app_priority_index') }}" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancel
                                </a>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>

                <!-- Help Section -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-info-circle"></i> Priority Guidelines
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Priority Number</h6>
                                <ul class="list-unstyled">
                                    <li><i class="bi bi-check text-success"></i> Use numbers 1-10 (1 = highest priority)</li>
                                    <li><i class="bi bi-check text-success"></i> Lower numbers = higher priority</li>
                                    <li><i class="bi bi-check text-success"></i> Be consistent with your numbering</li>
                                </ul>
                            </div>
                            <div class="col-md-6">
                                <h6>AI Prompt</h6>
                                <ul class="list-unstyled">
                                    <li><i class="bi bi-check text-success"></i> Be specific about urgency levels</li>
                                    <li><i class="bi bi-check text-success"></i> Include relevant keywords</li>
                                    <li><i class="bi bi-check text-success"></i> Describe issue severity clearly</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
