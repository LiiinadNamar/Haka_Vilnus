{% extends 'base.html.twig' %}

{% block title %}Messages for Issue #{{ issue.id }}{% endblock %}

{% block body %}
    <div id="ticket-detail-section" class="page-section active">
        <div class="container-fluid p-4">
            <div class="row justify-content-center">
                <div class="col-12 col-xl-10">
                    <div class="d-flex align-items-center gap-3 mb-4">
                        <a href="{{ path('app_dashboard') }}" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left"></i>
                        </a>
                        <div>
                            <h1 id="ticket-detail-title" class="slide-in-left">Ticket #{{ issue.id }} - {{ issue.title }}</h1>
                            {% if issue.summary %}
{#                                <p id="ticket-detail-description" class="text-muted mb-0 slide-in-left">{{ issue.summary }}</p>#}
                            {% endif %}
                        </div>
                    </div>

                    <!-- Flash Messages -->
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}

                    <div class="row g-4">
                        <!-- Chat Section -->
                        <div class="col-12 col-lg-8">
                            <div class="card h-100">
                                <div class="card-header">
                                    <h5 class="card-title mb-0">Chat</h5>
                                </div>

                                <div class="card-body d-flex flex-column" style="height: 800px;">
                                    <div id="chat-messages" class="flex-grow-1 overflow-auto mb-3" style="max-height: 800px;">
                                        {% if messages|length > 0 %}
                                            {% for message in messages %}
                                                <div class="d-flex justify-content-{{ message.isCustomer ? 'start' : 'end' }} mb-3">
                                                    <div class="chat-message {{ message.isCustomer ? 'client' : 'support' }}">
                                                        <div class="message-content">{{ message.content|nl2br }}</div>
                                                        <div class="chat-timestamp">
                                                            Message #{{ message.id }} - {{ message.isCustomer ? 'Customer' : 'Support' }}
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endfor %}
                                        {% else %}
                                            <div class="text-center text-muted py-4">
                                                <p>No messages found for this issue.</p>
                                            </div>
                                        {% endif %}
                                    </div>

                                    <div class="border-top pt-3">
                                        <form id="message-form" action="{{ path('app_send_message', {'issueId': issue.id}) }}" method="POST">
                                            <div class="d-flex gap-2">
                                                <button type="button" class="btn btn-outline-primary btn-sm" onclick="getAISuggestion()" id="ai-suggest-btn">
                                                    <i class="bi bi-robot"></i> AI Suggest
                                                </button>
                                                <textarea name="content" id="message-input" class="form-control" placeholder="Type your message..." required rows="2" style="resize: vertical; min-height: 38px;"></textarea>
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="bi bi-send"></i>
                                                </button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Info Section -->
                        <div class="col-12 col-lg-4">
                            <div class="row g-3">
                                <!-- Issue Info -->
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">Issue Information</h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row g-2">
                                                <div class="col-4"><strong>ID:</strong></div>
                                                <div class="col-8">#{{ issue.id }}</div>

                                                <div class="col-4"><strong>Title:</strong></div>
                                                <div class="col-8">{{ issue.title }}</div>

                                                {% if issue.summary %}
                                                <div class="col-4"><strong>Summary:</strong></div>
                                                <div class="col-8">{{ issue.summary }}</div>
                                                {% endif %}

                                                <div class="col-4"><strong>Priority:</strong></div>
                                                <div class="col-8">
                                                    {% if issue.priority %}
                                                        <span class="badge" style="background-color: {{ issue.priority.color }}; color: white;">
                                                            {{ issue.priority.number }}
                                                        </span>
                                                    {% else %}
                                                        <span class="text-muted">No priority assigned</span>
                                                    {% endif %}
                                                </div>

                                                <div class="col-4"><strong>Labels:</strong></div>
                                                <div class="col-8">
                                                    {% for label in issue.labels %}
                                                        <span class="badge me-1" style="background: none; background-color: {{ label.color }} !important; color: white;">
                                                            {{ label.name }}
                                                        </span>
                                                    {% endfor %}
                                                </div>

                                                <div class="col-4"><strong>Messages:</strong></div>
                                                <div class="col-8">{{ messages|length }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let lastMessageId = {{ messages|length > 0 ? messages|last.id : 0 }};
        let pollInterval = null;

        // Start polling for new messages
        function startPolling() {
            if (pollInterval) return; // Already polling

            pollInterval = setInterval(() => {
                fetch(`/chat/{{ issue.id }}/messages?lastMessageId=${lastMessageId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success && data.hasNewMessages) {
                        data.messages.forEach(message => {
                            addMessageToChat(message);
                            lastMessageId = Math.max(lastMessageId, message.id);
                        });
                    }
                })
                .catch(error => {
                    console.error('Error polling for messages:', error);
                });
            }, 2000); // Poll every 2 seconds
        }

        // Stop polling
        function stopPolling() {
            if (pollInterval) {
                clearInterval(pollInterval);
                pollInterval = null;
            }
        }

        // Add new message to chat
        function addMessageToChat(message) {
            const messagesContainer = document.getElementById('chat-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `d-flex justify-content-${message.isCustomer ? 'start' : 'end'} mb-3`;
            messageDiv.innerHTML = `
                <div class="chat-message ${message.isCustomer ? 'client' : 'support'}">
                    <div class="message-content">${message.content.replace(/\n/g, '<br>')}</div>
                    <div class="chat-timestamp">
                        Message #${message.id} - ${message.isCustomer ? 'Customer' : 'Support'}
                    </div>
                </div>
            `;
            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        // Handle form submission
        document.getElementById('message-form').addEventListener('submit', function(e) {
            e.preventDefault();

            const formData = new FormData(this);
            const content = formData.get('content');

            if (!content.trim()) {
                showFlashMessage('Message content cannot be empty', 'error');
                return;
            }

            // Add message to UI immediately
            const tempMessage = {
                id: 'temp-' + Date.now(),
                content: content,
                isCustomer: false // Assuming internal messages are from support
            };
            addMessageToChat(tempMessage);

            // Clear the form
            document.getElementById('message-input').value = '';

            // Send to server
            fetch(this.action, {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Remove temp message
                    const messagesContainer = document.getElementById('chat-messages');
                    const tempMessageDiv = messagesContainer.lastElementChild;
                    if (tempMessageDiv) {
                        tempMessageDiv.remove();
                    }

                    // Add the real message immediately
                    const realMessage = {
                        id: data.messageId,
                        content: content,
                        isCustomer: false // Internal messages are from support
                    };
                    addMessageToChat(realMessage);

                    // Update lastMessageId with the real message ID
                    lastMessageId = data.messageId;
                } else {
                    // Remove temp message on error
                    const messagesContainer = document.getElementById('chat-messages');
                    const tempMessageDiv = messagesContainer.lastElementChild;
                    if (tempMessageDiv) {
                        tempMessageDiv.remove();
                    }
                    showFlashMessage(data.error || 'Failed to send message', 'error');
                }
            })
            .catch(error => {
                // Remove temp message on error
                const messagesContainer = document.getElementById('chat-messages');
                const tempMessageDiv = messagesContainer.lastElementChild;
                if (tempMessageDiv) {
                    tempMessageDiv.remove();
                }
                console.error('Error sending message:', error);
                showFlashMessage('Network error occurred while sending message', 'error');
            });
        });

        // Start polling when page loads
        document.addEventListener('DOMContentLoaded', function() {
            startPolling();
        });

        // Stop polling when page is hidden/unloaded
        document.addEventListener('visibilitychange', function() {
            if (document.hidden) {
                stopPolling();
            } else {
                startPolling();
            }
        });

        window.addEventListener('beforeunload', function() {
            stopPolling();
        });

        function getAISuggestion() {
            const button = document.getElementById('ai-suggest-btn');
            const messageInput = document.getElementById('message-input');

            // Show loading state
            button.disabled = true;
            button.innerHTML = '<i class="bi bi-hourglass-split"></i> Getting suggestion...';

            fetch('{{ path('app_ai_suggest', {'issueId': issue.id}) }}', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Populate the message input with the suggestion
                    messageInput.value = data.suggestion;
                    messageInput.focus();
                } else {
                    // Show error message
                    showFlashMessage(data.error || 'Failed to get AI suggestion', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showFlashMessage('Network error occurred while getting AI suggestion', 'error');
            })
            .finally(() => {
                // Reset button state
                button.disabled = false;
                button.innerHTML = '<i class="bi bi-robot"></i> AI Suggest';
            });
        }

        function showFlashMessage(message, type) {
            // Create alert element
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show`;
            alertDiv.setAttribute('role', 'alert');
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;

            // Insert after the header
            const header = document.querySelector('.d-flex.align-items-center.gap-3.mb-4');
            header.parentNode.insertBefore(alertDiv, header.nextSibling);

            // Auto-dismiss after 5 seconds
            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 5000);
        }
    </script>
{% endblock %}
