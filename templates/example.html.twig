    <!-- Chat Widget -->
    <div class="chat-widget">
        <button class="chat-button" onclick="toggleChat()">
            <i class="bi bi-chat-dots"></i>
        </button>
        <div class="chat-modal" id="chatModal">
            <div class="chat-header">
                <h6 class="mb-0">Start a Conversation</h6>
                <button type="button" class="btn-close btn-close-white" onclick="toggleChat()"></button>
            </div>
            <div class="chat-body">
                <!-- Initial Form -->
                <div id="chatForm">
                    <div class="mb-3">
                        <label for="chatName" class="form-label">Your Name</label>
                        <input type="text" class="form-control" id="chatName" required>
                    </div>
                    <div class="mb-3">
                        <label for="chatEmail" class="form-label">Your Email</label>
                        <input type="email" class="form-control" id="chatEmail" required>
                    </div>
                    <div class="mb-3">
                        <label for="chatTitle" class="form-label">Issue Title</label>
                        <input type="text" class="form-control" id="chatTitle" placeholder="Brief description of your issue..." required>
                    </div>
                    <div class="mb-3">
                        <label for="chatMessage" class="form-label">How can we help?</label>
                        <textarea class="form-control" id="chatMessage" rows="3" placeholder="Describe your issue or question in detail..." required></textarea>
                    </div>
                    <button type="button" class="btn btn-success w-100" onclick="startChat()">
                        <i class="bi bi-send"></i> Start Chat
                    </button>
                </div>

                <!-- Chat Messages -->
                <div id="chatMessages" style="display: none;">
                    <div id="messagesContainer" style="max-height: 300px; overflow-y: auto; margin-bottom: 15px;">
                        <!-- Messages will be displayed here -->
                    </div>
                    <div class="input-group">
                        <input type="text" id="newMessageInput" class="form-control" placeholder="Type your message..." style="display: none;">
                        <button class="btn btn-outline-secondary" type="button" onclick="sendNewMessage()" style="display: none;">
                            <i class="bi bi-send"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let currentIssueId = null;
        let pollInterval = null;
        let lastMessageId = 0;

        function toggleChat() {
            const modal = document.getElementById('chatModal');
            modal.style.display = modal.style.display === 'block' ? 'none' : 'block';

            // Stop polling if chat is closed
            if (modal.style.display === 'none' && pollInterval) {
                clearInterval(pollInterval);
                pollInterval = null;
            }
        }

        function startChat() {
            const formData = {
                title: document.getElementById('chatTitle').value,
                name: document.getElementById('chatName').value,
                email: document.getElementById('chatEmail').value,
                message: document.getElementById('chatMessage').value
            };

            if (!formData.title || !formData.name || !formData.email || !formData.message) {
                alert('Please fill in all fields');
                return;
            }

            fetch('/chat/start', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: JSON.stringify(formData)
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    currentIssueId = data.issueId;
                    lastMessageId = data.messageId;

                    // Hide form and show chat
                    document.getElementById('chatForm').style.display = 'none';
                    document.getElementById('chatMessages').style.display = 'block';
                    document.getElementById('newMessageInput').style.display = 'block';
                    document.querySelector('#chatMessages .btn').style.display = 'block';

                    // Update header
                    document.querySelector('.chat-header h6').textContent = 'Live Chat';

                    // Display first message
                    addMessage(data.message, true);

                    // Start polling for new messages
                    startPolling();
                } else {
                    alert('Error: ' + (data.error || 'Failed to start chat'));
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Network error occurred');
            });
        }

        function addMessage(content, isCustomer) {
            const messagesContainer = document.getElementById('messagesContainer');
            const messageDiv = document.createElement('div');
            messageDiv.className = `mb-2 p-2 rounded ${isCustomer ? 'bg-primary text-white ms-4' : 'bg-light text-dark me-4'}`;
            messageDiv.style.fontSize = '14px';
            messageDiv.innerHTML = `
                <div class="fw-bold">${isCustomer ? 'You' : 'Support'}</div>
                <div>${content}</div>
            `;
            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        function startPolling() {
            pollInterval = setInterval(() => {
                fetch(`/chat/${currentIssueId}/messages`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        // Check for new messages
                        data.messages.forEach(message => {
                            if (message.id > lastMessageId && !message.isCustomer) {
                                addMessage(message.content, false);
                                lastMessageId = message.id;
                            }
                        });
                    }
                })
                .catch(error => {
                    console.error('Error fetching messages:', error);
                });
            }, 1000); // Poll every second
        }

        function sendNewMessage() {
            const input = document.getElementById('newMessageInput');
            const message = input.value.trim();

            if (!message) return;

            // Add message to UI immediately
            addMessage(message, true);
            input.value = '';

            // Send to server (create new message)
            fetch(`/messages/${currentIssueId}/send?is_external=true`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'X-Requested-With': 'XMLHttpRequest'
                },
                body: `content=${encodeURIComponent(message)}`
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    lastMessageId = data.messageId || lastMessageId;
                } else {
                    alert('Failed to send message');
                }
            })
            .catch(error => {
                console.error('Error sending message:', error);
                alert('Network error occurred');
            });
        }

        // Handle Enter key in message input
        document.addEventListener('DOMContentLoaded', function() {
            const newMessageInput = document.getElementById('newMessageInput');
            if (newMessageInput) {
                newMessageInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        sendNewMessage();
                    }
                });
            }
        });
    </script>
